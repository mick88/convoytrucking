<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.HouseFragment" >

    <TextView
        android:id="@+id/tvHouseCaption"
        style="@style/DataKey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imHouseImage"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="House"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imHouseImage"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="House thumbnail"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/card_padding"
        android:src="@drawable/generic_house" />

    <TextView
        android:id="@+id/tvHousePrice"
        style="@style/DataKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvHouseCaption"
        android:layout_below="@id/tvHouseCaption"
        android:text="$1,000,000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvHouseSlots"
        style="@style/DataKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvHousePrice"
        android:layout_alignParentRight="true"
        android:text="5 slots"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvHouseOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvHousePrice"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvHousePrice"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Owned by mick88"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>